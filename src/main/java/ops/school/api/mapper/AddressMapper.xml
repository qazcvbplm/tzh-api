<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ops.school.api.dao.AddressMapper">
    <resultMap id="BaseResultMap" type="ops.school.api.entity.Address">
        <id column="Id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="floor_id" jdbcType="INTEGER" property="floorId"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="detail" jdbcType="VARCHAR" property="detail"/>
        <result column="school_id" jdbcType="INTEGER" property="schoolId"/>
        <result column="open_id" jdbcType="VARCHAR" property="openId"/>
        <result column="floorName" jdbcType="VARCHAR" property="floorName"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
    </resultMap>

    <select id="find" resultMap="BaseResultMap" parameterType="ops.school.api.entity.Address">
        select address.*,floor.name as floorName from address right join floor on address.floor_id =floor.id
        <where>
            <if test="schoolId!=null">
                address.school_id=#{schoolId}
            </if>
            <if test="openId!=null">
                and address.open_id=#{openId}
            </if>
            and address.is_delete=0
        </where>
        <if test="orderBy!=null">
            order by #{orderBy}
        </if>
        <if test="page!=null and size!=null">
            limit #{page},#{size}
        </if>
    </select>

    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    *
    from address
    where Id = #{id,jdbcType=INTEGER}
  </select>


    <update id="updateByPrimaryKeySelective" parameterType="ops.school.api.entity.Address">
        update address
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="floorId != null">
                floor_id = #{floorId,jdbcType=INTEGER},
            </if>
            <if test="phone != null">
                phone = #{phone,jdbcType=VARCHAR},
            </if>
            <if test="detail != null">
                detail = #{detail,jdbcType=VARCHAR},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete,jdbcType=INTEGER},
            </if>
        </set>
        where Id = #{id,jdbcType=INTEGER}
    </update>

</mapper>