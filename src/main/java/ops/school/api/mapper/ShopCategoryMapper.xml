<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ops.school.api.dao.ShopCategoryMapper">
    <resultMap id="BaseResultMap" type="ops.school.api.entity.ShopCategory">
        <id column="Id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="sort" jdbcType="BIGINT" property="sort"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
        <result column="school_id" jdbcType="INTEGER" property="schoolId"/>
    </resultMap>


    <select id="find" resultMap="BaseResultMap" parameterType="ops.school.api.entity.ShopCategory">
        select
        <if test="total!=null">
            count(*) as total
        </if>
        <if test="total==null">
            *
        </if>
        from shop_category
        <where>
            school_id =#{schoolId}
            and is_delete=0
        </where>
        <if test="orderBy!=null">
            order by #{orderBy}
        </if>
        <if test="page!=null and size!=null">
            limit #{page},#{size}
        </if>
    </select>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
   *
    from shop_category
    where Id = #{id,jdbcType=INTEGER}
  </select>
    <insert id="insert" parameterType="ops.school.api.entity.ShopCategory">
    insert into shop_category ( name, sort, 
      school_id)
    values ( #{name,jdbcType=VARCHAR}, #{sort,jdbcType=BIGINT}, 
       #{schoolId,jdbcType=INTEGER})
  </insert>
    <update id="updateByPrimaryKeySelective" parameterType="ops.school.api.entity.ShopCategory">
        update shop_category
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="sort != null">
                sort = #{sort,jdbcType=BIGINT},
            </if>
            <if test="isDelete != null">
                is_delete = #{isDelete,jdbcType=INTEGER},
            </if>
        </set>
        where Id = #{id,jdbcType=INTEGER}
    </update>
</mapper>